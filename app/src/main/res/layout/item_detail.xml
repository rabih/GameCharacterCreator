<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item_detail"
    style="?android:attr/textAppearanceLarge"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:textIsSelectable="true"
    tools:context="com.rabihsalamey.gamecharactercreatorv2.ItemDetailFragment" >

    <TextView
        android:id="@+id/remaining_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <TextView
        android:id="@+id/label_strength"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/strength_label"
        android:paddingTop="20dp"
        android:layout_alignTop="@id/strength" />
    <RatingBar
        android:id="@+id/strength"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_below="@id/remaining_label"
        android:numStars="5"
        android:stepSize="1"
        android:paddingTop="35dp"
        android:paddingBottom="25dp"/>

    <TextView
        android:id="@+id/label_intellect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/intellect_label"
        android:layout_alignTop="@id/intellect"/>
    <RatingBar
        android:id="@+id/intellect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/strength"
        android:numStars="5"
        android:stepSize="1"
        android:paddingTop="15dp"
        android:paddingBottom="25dp"/>

    <TextView
        android:id="@+id/label_wisdom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/wisdom_label"
        android:layout_alignTop="@id/wisdom"/>
    <RatingBar
        android:id="@+id/wisdom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@id/intellect"
        android:numStars="5"
        android:stepSize="1"
        android:paddingTop="15dp"
        android:paddingBottom="25dp"/>

    <TextView
        android:id="@+id/label_dexterity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/dexterity_label"
        android:layout_alignTop="@id/dexterity"/>
    <RatingBar
        android:id="@+id/dexterity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/wisdom"
        android:numStars="5"
        android:stepSize="1"
        android:paddingTop="15dp"
        android:paddingBottom="25dp"/>

</RelativeLayout>
